@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Account";
    Layout = "_LoginRegisterLayout";
}
@{
    ViewData["Title"] = "Login";
    Layout = "_LoginRegisterLayout";
}
<div class="mx-auto" style="max-width: 30rem;">
    <!-- Card -->
    <div class="card card-lg mb-5">
        <div class="card-body">
            <!-- Form -->
            <form novalidate asp-action="ResetPassword" asp-controller="Account" method="post">
                <div class="text-center">
                    <div class="mb-5">
                        <h1 class="display-5">Send reset password link</h1>
                        <p>
                            Dou you remmember your password?
                            <a class="link" asp-action="Login" asp-controller="Account">
                                Sign
                                in here
                            </a>
                        </p>
                    </div>

                </div>
                @if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger" asp-validation-summary="All">
                    </div>
                }
                <!-- Form -->
                <div class="mb-4">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control form-control-lg"
                           tabindex="1" placeholder="jacksparrow@gmail.com" aria-label="jacksparrow@gmail.com" required>
                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                </div>
                <!-- End Form -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-lg">Send</button>
                </div>
            </form>
            <!-- End Form -->
        </div>
    </div>
    <!-- End Card -->

</div>