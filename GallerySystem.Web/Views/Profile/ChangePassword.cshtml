@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <partial name="_SettingsNavbarPartial"/>

    <div class="col-lg-9">
        <div class="d-grid gap-3 gap-lg-5">

            <!-- Card -->
            <div id="passwordSection" class="card">
                <div class="card-header">
                    <h4 class="card-title">Change your password</h4>
                </div>
                @if (ViewBag.Status is not null)
                {
                    <p class="alert alert-success mx-3">
                        @ViewBag.Status
                    </p>
                }
                @if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mx-4" asp-validation-summary="All"></div>
                }
                <!-- Body -->
                <div class="card-body">
                    <!-- Form -->
                    <form id="changePasswordForm" asp-action="ChangePassword" asp-controller="Profile" method="post">
                        <!-- Form -->
                        <div class="row mb-4">
                            <label asp-for="CurrentPassword" class="col-sm-3 col-form-label form-label">
                                Current
                                password
                            </label>

                            <div class="col-sm-9">
                                <input asp-for="CurrentPassword" class="form-control" placeholder="Enter current password"
                                       aria-label="Enter current password">
                            </div>
                            <span asp-validation-for="CurrentPassword" class="invalid-feedback"></span>
                        </div>
                        <!-- End Form -->

                        <!-- Form -->
                        <div class="row mb-4">
                            <label asp-for="NewPassword" class="col-sm-3 col-form-label form-label">
                                New
                                password
                            </label>

                            <div class="col-sm-9">
                                <input asp-for="NewPassword" class="form-control"
                                       placeholder="Enter new password" aria-label="Enter new password">
                            </div>
                            <span asp-validation-for="NewPassword" class="invalid-feedback"></span>

                        </div>
                        <!-- End Form -->

                        <!-- Form -->
                        <div class="row mb-4">
                            <label asp-for="ConfirmNewPassword" class="col-sm-3 col-form-label form-label">
                                Confirm
                                new password
                            </label>

                            <div class="col-sm-9">
                                <div class="mb-3">
                                    <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm your new password"
                                           aria-label="Confirm your new password">
                                </div>
                                <span asp-validation-for="ConfirmNewPassword" class="invalid-feedback"></span>

                                <h5>Password requirements:</h5>

                                <p class="fs-6 mb-2">Ensure that these requirements are met:</p>

                                <ul class="fs-6">
                                    <li>Minimum 6 characters long - the more, the better</li>
                                </ul>
                            </div>
                        </div>
                        <!-- End Form -->

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                        </div>
                    </form>
                    <!-- End Form -->
                </div>
                <!-- End Body -->
            </div>
            <!-- End Card -->
        </div>
    </div>
</div>