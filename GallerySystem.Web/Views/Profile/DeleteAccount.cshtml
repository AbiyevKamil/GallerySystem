@model DeleteAccountViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="row">
    <partial name="_SettingsNavbarPartial"/>

    <div class="col-lg-9">
        <div class="d-grid gap-3 gap-lg-5">
            <!-- Card -->
            <div id="deleteAccountSection" class="card">
                <div class="card-header">
                    <h4 class="card-title">Delete your account</h4>
                </div>

                <!-- Body -->
                <form class="card-body" asp-action="DeleteAccount" asp-controller="Profile" method="post">
                    <p class="card-text">
                        When you delete your account, you lose access to this account, and we permanently delete your personal data.
                    </p>

                    <div class="mb-4">
                        <!-- Form Check -->
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsAccepted">
                            <label class="form-check-label" asp-for="IsAccepted">
                                Confirm that I want to delete my account.
                            </label>
                        </div>
                        <!-- End Form Check -->
                    </div>

                    <div class="d-flex justify-content-end gap-3">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </form>
                <!-- End Body -->
            </div>
            <!-- End Card -->
        </div>
    </div>
</div>