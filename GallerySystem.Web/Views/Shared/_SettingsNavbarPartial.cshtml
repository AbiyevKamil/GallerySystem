                    <a class="nav-link" asp-action="Index" asp-controller="Profile">
                        <i class="bi-person nav-icon"></i> Profile
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-action="UpdateName" asp-controller="Profile">
